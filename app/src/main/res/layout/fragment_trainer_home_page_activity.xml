<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:id="@+id/relativeLayoutTrainerHomePage">

    <ImageView
        android:id="@+id/imageViewTrainerDataPage"
        android:layout_width="194dp"
        android:layout_height="151dp"
        android:padding="10dp"
        android:src="@drawable/ic_account" />
    <TextView
        android:id="@+id/textViewTrainerRegisterFirstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="25dp"
        android:text="Jan "
        android:layout_toRightOf="@+id/imageViewTrainerDataPage"
        android:textColor="@android:color/black"
        android:fontFamily="monospace"/>
    <TextView
        android:id="@+id/textViewTrainerRegisterLastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="25dp"
        android:text="Kowalski"
        android:layout_toRightOf="@+id/textViewTrainerRegisterFirstName"
        android:textColor="@android:color/black"
        android:fontFamily="monospace"/>
    <TextView
        android:id="@+id/textViewTrainerRegisterEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="25dp"
        android:text="Email "
        android:layout_below="@+id/textViewTrainerRegisterLastName"
        android:layout_toRightOf="@+id/imageViewTrainerDataPage"
        android:textColor="@android:color/black"
        android:fontFamily="monospace"/>
    <TextView
        android:id="@+id/textViewTrainerCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="10dp"
        android:layout_marginStart="-1dp"
        android:layout_marginLeft="68dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/imageViewTrainerDataPage"
        android:text="Lublin"
        android:layout_below="@+id/textViewTrainerRegisterFirstName"
        android:textColor="@android:color/black"
        android:fontFamily="monospace"/>
    <TextView
        android:id="@+id/textViewTrainerRegion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="10dp"
        android:layout_marginStart="-1dp"
        android:layout_marginLeft="68dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/textViewTrainerCity"
        android:text="Lubelskie"
        android:layout_below="@+id/textViewTrainerRegisterFirstName"
        android:textColor="@android:color/black"
        android:fontFamily="monospace"/>
    <TextView
        android:id="@+id/textViewTrainerDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Absolwent AWF w Białej Podlaskiej i UP w Lublinie na kierunku dietetyka. Swoje doświadczenie zdobywałem, pracując jako trener personalny w najbardziej znanych sieciówkach w Polsce takich jak Holmes places, Pure ,Galeria Fitness. Byłem uczestnikiem debiutów i Mistrzostw Polski w kulturystyce i fitness."
        android:layout_below="@+id/imageViewTrainerDataPage"
        android:textColor="@android:color/black"
        android:fontFamily="monospace"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatTrainerCalendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewTrainerDescription"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="@color/navViewColor"
        android:src="@drawable/ic_calendar" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatTrainerOpinions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewTrainerDescription"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        android:layout_toRightOf="@id/floatTrainerCalendar"
        android:backgroundTint="@color/navViewColor"
        android:src="@drawable/ic_star" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatTrainerDiscipline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewTrainerDescription"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        android:layout_toRightOf="@id/floatTrainerOpinions"
        android:backgroundTint="@color/navViewColor"
        android:src="@drawable/ic_discipline" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatTrainerPriceList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewTrainerDescription"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        android:layout_toRightOf="@id/floatTrainerDiscipline"
        android:backgroundTint="@color/navViewColor"
        android:src="@drawable/ic_price_list" />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatObjectSchedule2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewTrainerDescription"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="60dp"
        android:layout_toRightOf="@id/floatTrainerPriceList"
        android:backgroundTint="@color/navViewColor"
        android:src="@drawable/ic_schedule" />
    <Button
        android:id="@+id/sendTrainerMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/floatTrainerCalendar"
        android:layout_margin="20dp"
        android:text="Wyślij wiadomość"
        android:fontFamily="monospace"
        android:background="@drawable/greenbutton"
        android:textColor="@android:color/black"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"/>

</RelativeLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageViewUserDataPage"
            android:layout_width="194dp"
            android:layout_height="151dp"
            android:padding="10dp"
            android:src="@drawable/ic_account" />

        <Button
            android:id="@+id/changeObjectDataPageImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageViewUserDataPage"
            android:layout_alignLeft="@+id/imageViewUserDataPage"
            android:layout_marginLeft="197dp"
            android:layout_marginTop="-131dp"
            android:layout_toRightOf="@+id/imageViewUserDataPage"
            android:text="Zmień"
            android:background="@drawable/greenbutton"
            android:textColor="@android:color/white"
            android:fontFamily="monospace"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"/>

        <Button
            android:id="@+id/deleteObjectDataPageImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/changeObjectDataPageImage"
            android:layout_alignLeft="@+id/imageViewUserDataPage"
            android:layout_marginLeft="198dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/imageViewUserDataPage"
            android:text="Usuń"
            android:background="@drawable/greenbutton"
            android:textColor="@android:color/black"
            android:fontFamily="monospace"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"/>
        <TextView
            android:id="@+id/textViewUserRegisterEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Adres e-mail"
            android:layout_below="@id/imageViewUserDataPage"
            android:textColor="@android:color/black"
            android:fontFamily="monospace"/>
        <EditText
            android:id="@+id/editTextUserRegisterEmail"
            android:hint="Wpisz..."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/textViewUserRegisterEmail"
            android:layout_alignBaseline="@id/textViewUserRegisterEmail"
            android:textColor="@android:color/black"
            android:fontFamily="monospace"/>
        <TextView
            android:id="@+id/textViewUserRegisterPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewUserRegisterEmail"
            android:padding="10dp"
            android:text="Hasło"
            android:textColor="@android:color/black"
            android:fontFamily="monospace"/>
        <EditText
            android:id="@+id/editTextUserRegisterPassword"
            android:hint="Wpisz..."
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/textViewUserRegisterPassword"
            android:layout_alignBaseline="@id/textViewUserRegisterPassword"
            android:textColor="@android:color/black"
            android:fontFamily="monospace"/>
        <TextView
            android:id="@+id/textViewUserRegisterSex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewUserRegisterPassword"
            android:padding="10dp"
            android:text="Wybierz płeć*"
            android:textColor="@android:color/black"
            android:fontFamily="monospace"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerUserRegisterSex"
            android:layout_toRightOf="@id/textViewUserRegisterSex"
            android:layout_alignBaseline="@+id/textViewUserRegisterSex"
            android:prompt="@string/spinner_title"
            android:entries="@array/sex"
            android:spinnerMode="dropdown"
            android:textColor="@android:color/black"
            android:fontFamily="monospace"/>
        <TextView
            android:id="@+id/textViewUserFirstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewUserRegisterSex"
            android:padding="10dp"
            android:text="Imię"
            android:textColor="@android:color/black"
            android:fontFamily="monospace"/>
        <EditText
            android:id="@+id/editTextUserFirstName"
            android:hint="Wpisz..."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/textViewUserFirstName"
            android:layout_alignBaseline="@id/textViewUserFirstName"
            android:textColor="@android:color/black"
            android:fontFamily="monospace"/>
        <TextView
            android:id="@+id/textViewUserLastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewUserFirstName"
            android:padding="10dp"
            android:text="Nazwisko"
            android:textColor="@android:color/black"
            android:fontFamily="monospace"/>
        <EditText
            android:id="@+id/editTextUserLastName"
            android:hint="Wpisz..."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/textViewUserLastName"
            android:layout_alignBaseline="@id/textViewUserLastName"
            android:textColor="@android:color/black"
            android:fontFamily="monospace"/>
        <TextView
            android:id="@+id/textViewUserProvince"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewUserLastName"
            android:padding="10dp"
            android:text="Województwo"
            android:textColor="@android:color/black"
            android:fontFamily="monospace"/>
        <Spinner
            android:id="@+id/spinnerUserProvince"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/province"
            android:layout_toEndOf="@id/textViewUserProvince"
            android:layout_alignBaseline="@id/textViewUserProvince"
            android:textColor="@android:color/black"
            android:fontFamily="monospace"/>
        <TextView
            android:id="@+id/textViewObjectCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewUserProvince"
            android:padding="10dp"
            android:text="Miasto"
            android:textColor="@android:color/black"
            android:fontFamily="monospace"/>
        <Spinner
            android:id="@+id/spinnerUserCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/city"
            android:layout_toEndOf="@id/textViewObjectCity"
            android:layout_alignBaseline="@id/textViewObjectCity"
            android:textColor="@android:color/black"
            android:fontFamily="monospace"/>
        <Button
            android:id="@+id/changeUserDataButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zapisz zmiany"
            android:layout_below="@id/spinnerUserCity"
            android:textColor="@android:color/black"
            android:fontFamily="monospace"
            android:background="@drawable/greenbutton"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            />

    </RelativeLayout>
</ScrollView>
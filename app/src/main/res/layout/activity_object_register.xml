    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBoxObjectRegisterRules"
        android:layout_below="@id/editTextObjectDescription"
        android:text="@string/rulesText"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/textViewObjectRegisterRulesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBoxObjectRegisterRules"
        android:text="@string/rules"
        />

    <Button
        android:id="@+id/registerObjectButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewObjectRegisterRulesText"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:background="@drawable/greenbutton"
        android:fontFamily="monospace"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="@string/registerText"
        android:textColor="@color/black" />





</RelativeLayout>
</ScrollView>
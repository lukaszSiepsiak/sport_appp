<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:id="@+id/relativeLayoutObjectHomePage">
            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background">

                <ImageView
                    android:id="@+id/imageViewObjectDataPage"
                    android:layout_width="194dp"
                    android:layout_height="151dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_account" />
                <TextView
                    android:id="@+id/textViewObjectName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_marginTop="25dp"
                    android:text="Nazwa"
                    android:layout_toRightOf="@+id/imageViewObjectDataPage"
                    android:textColor="@android:color/black"
                    android:fontFamily="monospace"/>

                <TextView
                    android:id="@+id/textViewObjectCity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:padding="10dp"
                    android:layout_marginStart="-1dp"
                    android:layout_marginLeft="68dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/imageViewObjectDataPage"
                    android:text="Miasto"
                    android:layout_below="@+id/textViewObjectName"
                    android:textColor="@android:color/black"
                    android:fontFamily="monospace"/>
                <TextView
                    android:id="@+id/textViewObjectProvince"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:padding="10dp"
                    android:layout_marginStart="-1dp"
                    android:layout_marginLeft="68dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/textViewObjectCity"
                    android:text="Województwo"
                    android:layout_below="@+id/textViewObjectName"
                    android:textColor="@android:color/black"
                    android:fontFamily="monospace"/>
                <TextView
                    android:id="@+id/textViewObjectEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:layout_below="@+id/textViewObjectCity"
                    android:layout_toRightOf="@id/imageViewObjectDataPage"
                    android:textColor="@android:color/black"
                    android:fontFamily="monospace"
                    android:padding="10dp"/>
                <TextView
                    android:id="@+id/textViewObjectDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fit4less klub fitness znajduje się w niezwykłej lokalizacji: Gdańsk-Chełm/Ujeścisko. Idealne miejsce dla mieszkańców tej części Gdańska, jak i innych jego zakątków. Miejsce poza centrum. ale z łatwym i szybkim dojazdem komunikacją miejską."
                    android:layout_below="@+id/imageViewObjectDataPage"
                    android:textColor="@android:color/black"
                    android:fontFamily="monospace"/>

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/floatObjectCalendar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textViewObjectDescription"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="60dp"
                    android:backgroundTint="@color/navViewColor"
                    android:src="@drawable/ic_calendar" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/floatTrainerOpinions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textViewObjectDescription"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="60dp"
                    android:layout_toRightOf="@id/floatObjectCalendar"
                    android:backgroundTint="@color/navViewColor"
                    android:src="@drawable/ic_star" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/floatTrainerDiscipline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textViewObjectDescription"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="60dp"
                    android:layout_toRightOf="@id/floatTrainerOpinions"
                    android:backgroundTint="@color/navViewColor"
                    android:src="@drawable/ic_discipline" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/floatObjectTrainers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textViewObjectDescription"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="60dp"
                    android:layout_toRightOf="@id/floatTrainerDiscipline"
                    android:backgroundTint="@color/navViewColor"
                    android:src="@drawable/ic_trainer" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/floatObjectSchedule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textViewObjectDescription"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="60dp"
                    android:layout_toRightOf="@id/floatObjectTrainers"
                    android:backgroundTint="@color/navViewColor"
                    android:src="@drawable/ic_schedule" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/floatTrainerPriceList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textViewObjectDescription"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="60dp"
                    android:layout_toRightOf="@id/floatObjectSchedule"
                    android:backgroundTint="@color/navViewColor"
                    android:src="@drawable/ic_price_list" />
                <Button
                    android:id="@+id/sendObjectMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/floatObjectCalendar"
                    android:layout_margin="20dp"
                    android:text="Wyślij wiadomość"
                    android:fontFamily="monospace"
                    android:textColor="@color/black"
                    android:background="@drawable/greenbutton"
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp"/>


            </RelativeLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <ImageView
        android:id="@+id/imageViewUserHomePage"
        android:layout_width="194dp"
        android:layout_height="151dp"
        android:padding="10dp"
        android:src="@drawable/ic_account" />
    <TextView
        android:id="@+id/textViewUserFirstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="25dp"
        android:text="Imię"
        android:layout_toRightOf="@+id/imageViewUserHomePage"
        android:textColor="@android:color/black"
        android:fontFamily="monospace"/>
    <TextView
        android:id="@+id/textViewUserLastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="25dp"
        android:text="Nazwisko"
        android:layout_toRightOf="@+id/textViewUserFirstName"
        android:textColor="@android:color/black"
        android:fontFamily="monospace"/>

    <TextView
        android:id="@+id/textViewObjectCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="10dp"
        android:layout_marginStart="-1dp"
        android:layout_marginLeft="68dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/imageViewUserHomePage"
        android:text="Miasto"
        android:layout_below="@+id/textViewUserFirstName"
        android:textColor="@android:color/black"
        android:fontFamily="monospace"/>
    <TextView
        android:id="@+id/textViewObjectProvince"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="10dp"
        android:layout_marginStart="-1dp"
        android:layout_marginLeft="68dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/textViewObjectCity"
        android:text="Województwo"
        android:layout_below="@+id/textViewUserFirstName"
        android:textColor="@android:color/black"
        android:fontFamily="monospace"/>
    <TextView
        android:id="@+id/textViewUserEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/textViewObjectProvince"
        android:layout_toRightOf="@id/imageViewUserHomePage"
        android:text="user@email.com"
        android:textColor="@android:color/black"
        android:fontFamily="monospace"
        />

</RelativeLayout>
</ScrollView>